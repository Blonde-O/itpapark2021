<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="javaDepImpl" class="attempts.spring.one.classImpl.JavaDepImpl"/>
    <bean id="delphiDepImpl" class="attempts.spring.one.classImpl.DelphiDepImpl"/>
    <bean id="cPlusPlusDepImpl" class="attempts.spring.one.classImpl.CPlusPlusDepImpl"/>

    <bean id="hiringDepartment2" class="attempts.spring.one.Hiring">
        <constructor-arg ref="javaDepImpl"/>
    </bean>
    <bean id="hiringDepartment1" class="attempts.spring.one.Hiring">
       <constructor-arg ref="cPlusPlusDepImpl"/>
</bean>
    <bean id="hiringDepartment" class="attempts.spring.one.Hiring">
        <constructor-arg ref="delphiDepImpl"/>
    </bean>

</beans>